{
  "name": "commission-task/app",
  "version": "1.0",
  "description": "Skeleton for recruitment task",
  "keywords": [],
  "type": "project",
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests"
    }
  },
  "require": {
    "php": ">=7.0",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "3.56.0",
    "phpunit/phpunit": "^11.1"
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "scripts": {
    "phpunit": "phpunit",
    "fix-cs": "php-cs-fixer fix",
    "test-cs": "php-cs-fixer fix --dry-run -v",
    "test": [
      "@phpunit",
      "@test-cs"
    ]
  }
}
